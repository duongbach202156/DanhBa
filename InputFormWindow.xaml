<Window x:Class="WDFDemo.InputFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDFDemo"
        mc:Ignorable="d"
        SizeToContent="Height"
        Title="InputFormWindow" Height="450" Width="400">

    <Grid>
        <StackPanel>
            <StackPanel x:Name="Body" Margin="10 20 10 50">
                <TextBox x:Name="TenBox" Text="{Binding Path=Ten}" />
                <Label>Tên</Label>
                <TextBox x:Name="SoDTBox" Text="{Binding Path=SoDT}" />
                <Label>Số điện thoại</Label>
            </StackPanel>
            <Border Background="WhiteSmoke">
                <StackPanel x:Name="Footer" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button x:Name="ButtonSave" Margin="4 10">Lưu</Button>
                    <Button x:Name="ButtonCancel" Margin="4 10">Thoát</Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
